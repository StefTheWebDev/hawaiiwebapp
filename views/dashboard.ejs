<div class="home-body">
    <div class="navbar-plain">
        <li class="navbar-plain__linkBox--li-2"><img class="navbar-plain__img" src="css/img/logo.png"/></li>
        <a href="/users/logout"> <li class="navbar-plain__linkBox--li">Logout</li></a>
        <a href="#blog"> <li class="navbar-plain__linkBox--li">Stories</li></a>
        <a href="#about"><li class="navbar-plain__linkBox--li">About</li></a>
    </div>
    
    <section class="section-stories">
      <div class="bg-video">
        <video class="bg-video__content" autoplay muted loop>
          <source src="css/img/GubatBeach.mp4" type="video/mp4"/>
          <source src="css/img/GubatBeach.webm" type="video/webm"/>

        </video>
      </div>
      <div class="header-heading-primary">
        <h1 class="header-heading-primary__h1">Discover Paradise</h1>
        <span class="header-heading-secondary__text">
          In Hawaii
        </span>
        
      </div>
    </section>

    <section id="about" class="section-about">
      <div class="about-box">
        <div class="about-box__img-box">
          <img class="about-box__img-box--img" src="css/img/computer.jpg">
        </div>
        <div class="about-box__info">
          <h1 class="about-box__info--h1">How You can use this website</h1>
          <div class="about-box__info--box">
            <p class="about-box__info--box--text">This website is for anyone who is thinking about going to Hawaii or has recently been to share their experience and give others an idea of what to expect and where they can go when visiting. If you would like to make a post there is a form on the bottom to share your experience.</p>
          </div>
          <div class="about-box__button">
              <a class="btn btn--blue" href="">Make a Post</a>
          </div>
          
        </div>
      </div>

    </section>

    <section class="section-blog">
      
      <h1 class="section-blog--h1">Travel Blog</h1>

      <div id="blog" class="section-blog__posts">
          <% for(let i = 0; i < posts.length; i++) { %>
            <div class="section-blog__posts--post">
                <article class="section-blog__article">
                    <h2 class="section-blog__article--title"><%= posts[i].title %></h2>
                    <p class="section-blog__article--name"><%= posts[i].name %></p>
                    <p class="section-blog__article--date"><%= posts[i].date %></p>
                    <p class="section-blog__article--body"><%= posts[i].body %></p>
                    
                </article>

            </div>
            <% } %>
      </div>
    </section>
    <section class="post-form">

      <div class="post-form__post-box">
          <div class="post-form__group">

              <form action="addpost" method="POST">
                  <h1 class="login-body__heading">Share Your Story</h1>
                  <label class="post-form__label" for="name">Name: </label>
                  <input class="post-form__input--blue" name="name" value="<%= user.name %>" readonly></input>
                  <label class="post-form__label" for="title">Title: </label>
                  <input class="post-form__input--blue" name="title"></input>
                  <label class="post-form__label" for="body">Story: </label>
                  <textarea  class="post-form__input--blue"name="body"></textarea>
                  <button class="post-btn post-btn--blue" type="submit" value="Add Post">Add Post</button>
              </form>
          </div>

      </div>
     


    </section>
</div>